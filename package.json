{
  "name": "twitter-archiver",
  "version": "1.0.0",
  "description": "twitter archiver",
  "main": "./src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist ./coverage ./scripts/*.js ./configs/*.js",
    "clean:dll": "rm -rf ./dll",
    "build:dll": "tsc ./scripts/dll_build.ts --lib dom,es6 && NODE_ENV=development node ./scripts/dll_build.js",
    "prebuild": "npm run clean && tsc ./scripts/build.ts --lib dom,es6",
    "build": "( [[ -d ./dll ]] || npm run build:dll ) && node ./scripts/build.js",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "prestart": "cross-env NODE_ENV=production npm run build",
    "start": "pm2 start ./app.json",
    "prestart:dev:client": "tsc ./scripts/start_client.ts --lib dom,es6",
    "start:dev:client": "node ./scripts/start_client.js",
    "prestart:dev:server": "tsc ./scripts/start_server.ts --lib dom,es6",
    "start:dev:server": "node ./scripts/start_server.js && node ./dist/main.js",
    "prestart:dev": "npm run build:dev && tsc ./scripts/dev_start.ts --lib dom,es6",
    "start:dev": "concurrently \"npm run start:dev:client\" \"npm run start:dev:server\"",
    "stop": "pm2 stop ./app.json",
    "test": "npm run clean && jest --no-cache",
    "coverage": "npm run clean && jest --coverage --no-cache",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/twitter-archiver.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/twitter-archiver/issues"
  },
  "homepage": "https://github.com/sapphiredev/twitter-archiver#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "knex": "^0.15.2",
    "morgan": "^1.9.0",
    "mysql": "^2.16.0",
    "oauth": "^0.9.15",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "semantic-ui-css": "^2.3.3",
    "semantic-ui-react": "^0.82.0",
    "twit": "^2.2.11",
    "twitter-text": "^2.0.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.22",
    "@types/chai": "^4.1.4",
    "@types/cookie-session": "^2.0.34",
    "@types/express": "^4.16.0",
    "@types/extract-text-webpack-plugin": "^3.0.3",
    "@types/jest": "^23.3.0",
    "@types/knex": "^0.14.17",
    "@types/morgan": "^1.7.35",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.4",
    "@types/supertest": "^2.0.5",
    "@types/twit": "^2.2.16",
    "@types/twitter-text": "^2.0.0",
    "@types/webpack-dev-server": "^2.9.5",
    "@types/webpack-node-externals": "^1.6.3",
    "babel-loader": "^7.1.5",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "jest": "^23.4.1",
    "node-sass": "^4.9.2",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.1",
    "webpack-dev-server": "^3.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "globals": {
      "__dev": false,
      "__env": {}
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/configs",
      "/scripts"
    ]
  }
}
