{
  "name": "twitter-archiver",
  "version": "1.0.0",
  "description": "twitter archiver",
  "main": "./src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist ./coverage",
    "clean:dll": "rm -rf ./dll",
    "build:dll": "NODE_ENV=development node ./scripts/build_dll.js",
    "prebuild": "npm run clean && npm run lint",
    "build": "( [[ -d ./dll ]] || npm run build:dll ) && node ./scripts/build.js",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "prestart": "cross-env NODE_ENV=production npm run build",
    "start": "pm2 start ./app.json",
    "start:dev:client": "NODE_ENV=development webpack-dev-server --config ./configs/webpack.config.client.js --hot --inline",
    "start:dev:server": "NODE_ENV=development npm run build && node ./dist/main.js",
    "start:dev": "concurrently \"npm run start:dev:client\" \"npm run start:dev:server\"",
    "stop": "pm2 stop ./app.json",
    "test": "npm run clean && jest --no-cache",
    "lint": "tslint -p ./tsconfig.json",
    "analyze": "NODE_ENV=analyze webpack --config ./configs/webpack.config.client.js",
    "coverage": "npm run clean && jest --coverage --no-cache",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/twitter-archiver.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/twitter-archiver/issues"
  },
  "homepage": "https://github.com/sapphiredev/twitter-archiver#readme",
  "dependencies": {
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "knex": "^0.15.2",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "mysql": "^2.16.0",
    "oauth": "^0.9.15",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "semantic-ui-css": "^2.3.3",
    "semantic-ui-react": "^0.82.2",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "twit": "^2.2.11",
    "twitter-text": "^2.0.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/chai": "^4.1.4",
    "@types/cookie-session": "^2.0.35",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/knex": "^0.14.20",
    "@types/morgan": "^1.7.35",
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/socket.io": "^1.4.36",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.5",
    "@types/twit": "^2.2.19",
    "@types/twitter-text": "^2.0.0",
    "@types/webpack": "^4.4.9",
    "babel-loader": "^7.1.5",
    "chai": "^4.1.2",
    "concurrently": "^3.6.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.11",
    "jest": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "globals": {
      "__dev": false,
      "__env": {}
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/configs",
      "/scripts"
    ]
  }
}
