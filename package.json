{
  "name": "twitter-archiver",
  "version": "1.0.0",
  "description": "twitter archiver",
  "main": "./src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist ./coverage ./scripts/*.js ./configs/*.js",
    "prebuild": "npm run clean && tsc ./scripts/build.ts --lib dom,es6",
    "build": "node ./scripts/build.js",
    "build:prod": "NODE_ENV=prod npm run build",
    "build:dev": "NODE_ENV=dev npm run build",
    "start": "pm2 start ./app.json",
    "start:prod": "npm run start",
    "start:dev": "npm run build:dev && node ./dist/main.js",
    "stop": "pm2 stop ./app.json",
    "pretest": "npm run clean && npm run prebuild",
    "test": "jest --no-cache",
    "precoverage": "npm run clean && npm run prebuild",
    "coverage": "jest --coverage --no-cache",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/twitter-archiver.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/twitter-archiver/issues"
  },
  "homepage": "https://github.com/sapphiredev/twitter-archiver#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "express": "^4.16.3",
    "knex": "^0.14.5",
    "localforage": "^1.7.1",
    "morgan": "^1.9.0",
    "oauth": "^0.9.15",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "semantic-ui-css": "^2.3.1",
    "semantic-ui-react": "^0.79.1",
    "sqlite3": "^4.0.0",
    "twit": "^2.2.9",
    "twitter-text": "^2.0.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/extract-text-webpack-plugin": "^3.0.2",
    "@types/jest": "^22.2.3",
    "@types/knex": "^0.14.9",
    "@types/morgan": "^1.7.35",
    "@types/react": "^16.3.8",
    "@types/react-dom": "^16.0.5",
    "@types/react-redux": "^5.0.16",
    "@types/supertest": "^2.0.4",
    "@types/twit": "^2.2.12",
    "@types/twitter-text": "^2.0.0",
    "@types/webpack-dev-middleware": "^2.0.1",
    "@types/webpack-env": "^1.13.5",
    "@types/webpack-hot-middleware": "^2.16.3",
    "@types/webpack-node-externals": "^1.6.3",
    "babel-loader": "^7.1.4",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "jest": "^22.4.3",
    "node-sass": "^4.8.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.2.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-dev-server": "^3.1.3",
    "webpack-hot-middleware": "^2.22.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "globals": {
      "__dev": false,
      "__env": {}
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/configs",
      "/scripts"
    ]
  }
}
