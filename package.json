{
  "name": "twitter-archiver",
  "version": "1.0.0",
  "description": "twitter archiver",
  "main": "./src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist ./coverage",
    "webpack": "webpack",
    "build:client": "cross-env TARGET=client npm run webpack",
    "build:server": "cross-env TARGET=server npm run webpack",
    "prebuild": "npm run clean && npm run lint",
    "build": "npm run build:client && npm run build:server",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "prestart": "npm run build:prod",
    "start": "pm2 start ./app.json",
    "stop": "pm2 stop ./app.json",
    "watch": "cross-env NODE_ENV=development npm run webpack -- --watch",
    "watch:client": "cross-env TARGET=client npm run watch",
    "watch:server": "cross-env TARGET=server npm run watch",
    "start:dev": "npm run start:dev:client && npm run start:dev:server",
    "pretest": "npm run clean",
    "test": "jest --no-cache --verbose",
    "lint": "tslint -p ./tsconfig.json",
    "analyze": "NODE_ENV=analyze TARGET=client webpack",
    "precoverage": "npm run clean",
    "coverage": "jest --coverage --no-cache",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/twitter-archiver.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/twitter-archiver/issues"
  },
  "homepage": "https://github.com/sapphiredev/twitter-archiver#readme",
  "dependencies": {
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.17.1",
    "knex": "^0.20.13",
    "moment": "^2.24.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "oauth": "^0.9.15",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.2",
    "reselect": "^4.0.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "twit": "^2.2.11",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/chai": "^4.2.11",
    "@types/cookie-session": "^2.0.39",
    "@types/express": "^4.17.4",
    "@types/jest": "^25.2.1",
    "@types/knex": "^0.16.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/request": "^2.48.4",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.8",
    "@types/twit": "^2.2.23",
    "@types/twitter-text": "^2.0.0",
    "@types/webpack": "^4.41.10",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "file-loader": "^6.0.0",
    "history": "^4.10.1",
    "jest": "^25.2.7",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "sqlite3": "^4.1.1",
    "style-loader": "^1.1.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "tslint": "^6.1.1",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.3",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "globals": {
      "__dev": false,
      "__test": true,
      "__env": {}
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1",
      "~/client/(.*)": "<rootDir>/src/client/$1",
      "~/server/(.*)": "<rootDir>/src/server/$1",
      "~/shared/(.*)": "<rootDir>/src/shared/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/configs",
      "/scripts"
    ]
  }
}
