{
  "name": "twitter-archiver",
  "version": "1.0.0",
  "description": "twitter archiver",
  "main": "./src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist ./coverage",
    "webpack": "webpack",
    "build:client": "cross-env TARGET=client npm run webpack",
    "build:server": "cross-env TARGET=server npm run webpack",
    "prebuild": "npm run clean && npm run lint",
    "build": "npm run build:client && npm run build:server",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "prestart": "npm run build:prod",
    "start": "node ./dist/main.js",
    "watch": "cross-env NODE_ENV=development npm run webpack -- --watch",
    "watch:client": "cross-env TARGET=client npm run watch",
    "watch:server": "cross-env TARGET=server npm run watch",
    "start:dev": "npm run start:dev:client && npm run start:dev:server",
    "pretest": "npm run clean",
    "test": "jest --no-cache --verbose",
    "lint": "tslint -p ./tsconfig.json",
    "analyze": "NODE_ENV=analyze TARGET=client webpack",
    "precoverage": "npm run clean",
    "coverage": "jest --coverage --no-cache",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sapphiredev/twitter-archiver.git"
  },
  "keywords": [
    "twitter"
  ],
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/twitter-archiver/issues"
  },
  "homepage": "https://github.com/sapphiredev/twitter-archiver#readme",
  "dependencies": {
    "cookie-session": "^2.0.0",
    "express": "^4.18.2",
    "knex": "^2.4.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "oauth": "^0.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.1",
    "redux": "^4.2.1",
    "redux-thunk": "^2.4.2",
    "reselect": "^4.1.8",
    "sass": "^1.62.1",
    "semantic-ui-react": "^2.1.4",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "twit": "^2.2.11",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@swc/register": "^0.1.10",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.2",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/react-redux": "^7.1.25",
    "@types/react-router-dom": "^5.3.3",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^2.0.12",
    "@types/twit": "^2.2.31",
    "@types/twitter-text": "^3.1.5",
    "@types/webpack": "^5.28.1",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@types/webpack-node-externals": "^3.0.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "file-loader": "^6.2.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "prettier": "^2.8.8",
    "sass-loader": "^13.2.2",
    "sqlite3": "^5.1.6",
    "style-loader": "^3.3.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0",
    "typescript": "^5.0.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "globals": {
      "__dev": false,
      "__test": true,
      "__env": {}
    },
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1",
      "~/client/(.*)": "<rootDir>/src/client/$1",
      "~/server/(.*)": "<rootDir>/src/server/$1",
      "~/shared/(.*)": "<rootDir>/src/shared/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/configs",
      "/scripts"
    ]
  }
}
