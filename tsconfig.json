{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"allowJs": false,
		"declaration": false,
		"sourceMap": true,
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017"
		],
		"outDir": "./build",
		"rootDir": ".",
		"jsx": "react",
		"strict": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noErrorTruncation": true,
		"noUnusedLocals": true
	}
}
